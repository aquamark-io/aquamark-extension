{
  "manifest_version": 3,
  "name": "Aquamark Gmail Extension",
  "version": "1.0",
  "description": "Watermark Gmail attachments with your Aquamark logo.",
  "permissions": ["scripting", "downloads", "activeTab", "storage"],
  "host_permissions": ["https://mail.google.com/*", "https://*.supabase.co/*", "https://aquamark-render.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["hologram.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
