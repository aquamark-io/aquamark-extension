{
  "manifest_version": 3,
  "name": "Aquamark Gmail Watermarker",
  "version": "1.0",
  "description": "Automatically watermark PDF attachments in Gmail using your stored Aquamark logo.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf-lib.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Aquamark",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
